# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/cubosmovies?schema=public"

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Cloudflare R2 Storage (compatÃ­vel com S3 API)
# Account ID encontrado em: https://dash.cloudflare.com/ -> R2 -> Overview
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=cubes-movies
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# Email Service (Resend / SES / Ethereal / Mailhog)
EMAIL_SERVICE=resend
EMAIL_FROM=noreply@cubosmovies.com
RESEND_API_KEY=your-resend-api-key

# Redis (para BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS
CORS_ORIGIN=http://localhost:5173
