                },
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sortBy",
                  "value": "releaseDate"
                },
                {
                  "key": "sortOrder",
                  "value": "desc"
                }
              ]
            },
            "description": "Exemplo de uso combinado de múltiplos filtros."
          },
          "response": []
        },
        {
          "name": "Get Movie by ID",
          "request": {
            "method": "GET",
