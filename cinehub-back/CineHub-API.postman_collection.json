              "path": ["api", "movies"],
              "query": [
                {
                  "key": "search",
                  "value": "aranha",
                  "description": "Busca no título (case-insensitive)"
                }
              ]
            },
            "description": "Busca filmes por título (case-insensitive, busca parcial)."
          },
          "response": []
        },
